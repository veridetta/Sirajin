<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sdp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/loginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Single Identity Network Login"
        android:textSize="@dimen/_12sdp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp" />

    <TextView
        android:id="@+id/copyrightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â© Sekretariat CEP CCIT"
        android:textSize="@dimen/_10sdp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/loginTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp" />

    <TextView
        android:id="@+id/fakultasTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fakultas Teknik"
        android:textSize="@dimen/_10sdp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/copyrightTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp" />

    <TextView
        android:id="@+id/yearTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023"
        android:textSize="@dimen/_10sdp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/fakultasTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_8sdp" />

</RelativeLayout>
