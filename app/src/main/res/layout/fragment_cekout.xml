<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_18sdp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_background"
                    android:padding="@dimen/_30sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Informasi Kesehatan"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="8"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="6">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lanjutkan Perilaku Hidup Bersih dan Sehat (PHBS)"
                                android:textSize="@dimen/_15sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="2">
                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@drawable/check"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_18sdp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_background"
                    android:padding="@dimen/_30sdp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawableStart="@drawable/alarm"
                        android:text=" Informasi Presensi Datang"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/white"/>
                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/absen"/>
                    <TextView
                        android:id="@+id/txJam"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07.52"
                        android:textSize="@dimen/_50sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/txTempat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hadir di Kampus"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Belum isi-->
            <androidx.cardview.widget.CardView
                android:id="@+id/belumIsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_18sdp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:padding="@dimen/_20sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="8"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="5">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Belum Mengisi Catatan Harian"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="3">
                            <ImageView
                                android:layout_width="@dimen/_60sdp"
                                android:layout_height="@dimen/_60sdp"
                                android:background="@drawable/catatan"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Card Informasi Catatan -->
            <!-- jika ada ganti cekout red dan enable-->
            <androidx.cardview.widget.CardView
                android:id="@+id/sudahIsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_18sdp"
                android:layout_marginBottom="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableStart="@drawable/ic_note"
                        android:text=" Informasi Catatan Harian"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/grey"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:weightSum="4">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/catatan"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textSize="@dimen/_28sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pokok"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="@dimen/_28sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tambahan"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="@dimen/_28sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kreatifitas"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="@dimen/_28sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upacara"
                                    android:textSize="@dimen/_11sdp"
                                    android:textStyle="bold"
                                    android:textColor="@color/grey"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Card Catatan Harian -->
            <androidx.cardview.widget.CardView
                android:id="@+id/belumCekout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:radius="16dp"
                android:layout_marginBottom="16dp">

                <!-- Jika catatan harian belum diisi, tampilkan pesan berikut -->
                <!-- Contoh: -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_weight="3"
                        android:paddingRight="@dimen/_10sdp">
                        <!-- Tombol "Catatan Harian" -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnTambahCatatanHarian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Catatan Harian"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/rounded_background"
                            android:backgroundTint="@color/orange"
                            android:layout_marginBottom="@dimen/_6sdp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="1">
                        <!-- Tombol "Cek-out" -->
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnCekOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CEK-OUT"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/rounded_background"
                            android:backgroundTint="@color/grey"
                            android:layout_marginBottom="@dimen/_6sdp" />
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/sudahCekout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_18sdp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_background_d"
                    android:padding="@dimen/_20sdp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="8"
                        android:padding="@dimen/_8sdp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:layout_weight="3">
                            <TextView
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:drawableStart="@drawable/alarm"
                                android:text=" Informasi Presensi Pulang"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="5">
                            <TextView
                                android:id="@+id/txJamOut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="07.52"
                                android:textSize="@dimen/_45sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>
                            <TextView
                                android:id="@+id/txTempatOut"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hadir di Kampus"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>-->

</LinearLayout>
